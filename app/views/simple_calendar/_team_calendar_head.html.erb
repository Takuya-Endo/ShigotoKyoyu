<div class="simple-calendar">

  <div class="row">

    <div class="col-1 col-lg-1 px-0 text-secondary border border-secondary border-bottom border-top-0 border-right-0 border-left-0 d-flex justify-content-center align-items-center">
      <div class="calendar-heading text-secondary">
        <u><%= link_to t('simple_calendar.previous', default: '前週'), calendar.url_for_previous_view, class: "text-secondary" %></u>
        <span> </span>
        <u><%= link_to t('simple_calendar.next', default: '次週'), calendar.url_for_next_view, class: "text-secondary" %></u>
      </div>
    </div>

    <div class="col-11 col-lg-11">
      <table class="table text-secondary mb-1" style="table-layout:fixed;">
        <thead style="background-color: #e7e6e6;">
          <tr>
            <% week = ["月","火","水","木","金","土","日"] %>
            <% date_range.slice(0, 14).each do |day| %>
              <% weekday = day.strftime("%u").to_i %>
              <th><%= link_to day.strftime("%-m/%-d(#{week[weekday - 1]})"), root_path(main_date: day), class: "btn text-secondary p-0" %></th>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>

  </div>

</div>