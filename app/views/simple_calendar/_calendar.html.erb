<% elsif day.strftime("%a") == "Fri" %>
<span>　　　　　　　　　　↓</span>
<% elsif day.strftime("%a") == "Sat" %>
<span>　　　　　　　　　　　　↓</span>
<% end %>


          <% end %>
        <% end %>
      <% end %>


</div>


