<div class="row my-3">
  <div class="col-8 col-lg-8 d-flex align-items-end">
    <p class="text-secondary">
      【<%= current_user.last_name %>さん】が参加している
    </p>
    <%= link_to team_path(@team.id), class: "btn mx-2 border border-primary", style: "text-decoration: none; border-radius: 0;" do %>
      <h5 class="text-secondary text-center">【<%= @team.team_name %>】チーム</h5>
    <% end %>
    <p class="text-secondary">
      の管理者権限の変更
    </p>
  </div>
  <div class="col-4 col-lg-4"></div>
</div>

<div class="row">
  <div class="col-1 col-lg-1"></div>
  <div class="col-10 col-lg-10 form-inline d-flex justify-content-center">

    <div class="col-12 col-lg-12 mt-5 text-secondary">
      <%= @user.last_name %><%= @user.first_name %>さんの管理者権限を
    </div>

    <% if @team_member.privilege == "○" %>

      <div class="row my-5">
        <div class="col-12 col-lg-12 form-inline d-flex justify-content-center">
          <div class="py-2 text-center text-secondary border border-secondary">　○：権限あり　</div>
          <div class="text-secondary">　から　</div>
          <div class="py-2 text-center text-secondary border border-secondary">　×：権限なし　</div>
          <div class="text-secondary">　に変更しますか？</div>
        </div>
        <div class="col-12 col-lg-12 my-5"></div>
        <div class="d-flex flex-lg-row flex-column justify-content-around col-12 col-lg-12">
          <div class="col-12 col-lg-5 d-flex justify-content-center" style="background-color: #8faadc; border-radius: 0;">
            <%= form_with model: @team_member, url: "/team_members/change_privilege_update/#{@team_member.id}", local: true do |f| %>
              <%= f.hidden_field :privilege, value: "×" %>
              <%= f.submit '変更する', class: "btn btn-lg text-white" %>
            <% end %>
          </div>
          <div class="col-12 my-2 d-lg-none"></div>
          <%= link_to "変更しない", users_path(team_id: @team.id), class: "btn btn-lg text-white col-lg-5", style: "background-color: #8faadc; border-radius: 0;" %>
        </div>
      </div>

    <% else %>

      <div class="row my-5">
        <div class="col-12 col-lg-12 form-inline d-flex justify-content-center">
          <div class="py-2 text-center text-secondary border border-secondary">　×：権限なし　</div>
          <div class="text-secondary">　から　</div>
          <div class="py-2 text-center text-secondary border border-secondary">　○：権限あり　</div>
          <div class="text-secondary">　に変更しますか？</div>
        </div>
        <div class="col-12 col-lg-12 my-5"></div>
        <div class="d-flex flex-lg-row flex-column justify-content-around col-12 col-lg-12">
          <div class="col-12 col-lg-5 d-flex justify-content-center" style="background-color: #8faadc; border-radius: 0;">
            <%= form_with model: @team_member, url: "/team_members/change_privilege_update/#{@team_member.id}", local: true do |f| %>
              <%= f.hidden_field :privilege, value: "○" %>
              <%= f.submit '変更する', class: "btn btn-lg text-white" %>
            <% end %>
          </div>
          <div class="col-12 my-2 d-lg-none"></div>
          <%= link_to "変更しない", users_path(team_id: @team.id), class: "btn btn-lg text-white col-lg-5", style: "background-color: #8faadc; border-radius: 0;" %>
        </div>
      </div>

    <% end %>

  </div>
  <div class="col-1 col-lg-1"></div>
</div>