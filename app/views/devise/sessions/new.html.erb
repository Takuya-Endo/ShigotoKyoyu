<div class="row">
  <div class="col-4 col-lg-4 my-3">
    <div class="row">
      <div class="col-2 col-lg-2"></div>
      <h5 class="col-10 col-lg-10 py-1 text-secondary text-center border border-primary">ログイン</h5>
    </div>
  </div>
  <p class="col-8 col-lg-8 my-3 text-secondary d-flex align-items-center">
    初めての場合は<%= render "devise/shared/links" %>から新規登録
  </p>
</div>

<div class="row">
  <div class="col-1 col-lg-1"></div>
  <div class="col-10 col-lg-10">

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="row my-3">
        <div class="col-5 col-lg-3 aline-items-center text-center text-secondary">
          <div class="row">
            <%= f.label :email, "メールアドレス", class: "col-12 col-lg-12 pb-2 form-label", style: "background-color: #e7e6e6;" %>
            <div class="col-12 col-lg-12 my-2"></div>
          </div>
        </div>
        <div class="col-7 col-lg-6">
          <div class="row">
            <div class="col-12 col-lg-12">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="d-none col-lg-3"></div>
      </div>

      <div class="row my-3">
        <div class="col-5 col-lg-3 aline-items-center text-center text-secondary">
          <div class="row">
            <%= f.label :password, "パスワード", class: "col-12 col-lg-12 pb-2 form-label", style: "background-color: #e7e6e6;" %>
            <div class="col-12 col-lg-12 my-2"></div>
          </div>
        </div>
        <div class="col-7 col-lg-6">
          <div class="row">
            <div class="col-12 col-lg-12">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="d-none col-lg-3"></div>
      </div>

      <div class="row">
        <div class="d-flex justify-content-center mt-3 col-12 col-lg-12">
          <%= f.submit "ログイン", class: "btn btn-lg text-white col-5 col-lg-5" , style: "background-color: #8faadc; border-radius: 0;"%>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-1 col-lg-1"></div>
</div>