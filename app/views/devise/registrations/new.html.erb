<h2>新規登録</h2>

<p>登録済みの場合は<%= render "devise/shared/links" %>からログイン</p>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <span>氏名</span> <%= f.label :last_name, "姓" %><%= f.text_field :last_name %> <%= f.label :first_name, "名" %><%= f.text_field :first_name %>
  </div>

  <div class="field">
    <span>フリガナ</span> <%= f.label :last_name_kana, "セイ" %><%= f.text_field :last_name_kana %> <%= f.label :first_name_kana, "メイ" %><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :department, "所属" %><%= f.text_field :department, placeholder: "空欄可" %>
  </div>

  <div class="field">
    <%= f.label :position, "役職" %><%= f.text_field :position, placeholder: "空欄可" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.radio_button :email_is_published, :true, checked: true %>同じチームの参加者に公開 <%= f.radio_button :email_is_published, :false %>非公開
  </div>

  <div class="field">
    <%= f.label :introduction, "その他" %><%= f.text_area :introduction, placeholder: "空欄可" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
      <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "上記内容で新規登録" %>
  </div>
<% end %>